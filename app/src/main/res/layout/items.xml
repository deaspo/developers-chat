<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="15dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:theme="@style/tw__CardAppStoreName">


        <RelativeLayout
            android:id="@+id/user_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/pprofile"
                android:layout_width="@dimen/profile_width"
                android:layout_height="@dimen/profile_height"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_black_24dp" />


            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp"
                android:textStyle="normal|bold"
                tools:text="User name is polycarp" />

            <TextView
                android:id="@+id/user_uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/device_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/user_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/itemName"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                tools:text="Hey there am also a developer" />

            <TextView
                android:id="@+id/date_user_joined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/pprofile"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="15dp"
                android:gravity="center|right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="14sp"
                tools:text="Jan 2017 11:15am" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>